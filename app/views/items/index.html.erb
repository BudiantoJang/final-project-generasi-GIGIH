<h1>All Items</h1>

<% @items.each do |item|%>
  <div class = "item-content">
    <h2> Name :<%= link_to(item.name, "/items/#{item.id}")%> </h2>
    <p> Description:  <%= item.description%> </p>
    <p> Price: <%= item.price%> </p>
    <p> Categories: <% item.categories.each do |category|%>
        <%= category.name%> 
    <%end%>
    </p>
  </div>
<%end%>
